@{
    ViewBag.Title = "Assign Role";
}

<h2>Assign Role to User</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.Label("Select User")
        @Html.DropDownList("userId", new SelectList(ViewBag.Users, "Id", "User Name"), "Select a user", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Select Role")
        @Html.DropDownList("roleName", new SelectList(ViewBag.Roles, "Name", "Name"), "Select a role", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Assign Role</button>
}
