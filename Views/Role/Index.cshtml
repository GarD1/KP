@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

    <h2>Roles</h2>

    <table>
        <thead>
            <tr>
                <th>Role Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("CreateRole")">Create New Role</a>
    <a href="@Url.Action("AssignRole")">Assign Role to User</a>
