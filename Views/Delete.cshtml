@model WebApplication7.Models.Document

@{
    ViewBag.Title = "Delete Document";
}

<h1>Delete Document</h1>

<div>
    <h4>Are you sure you want to delete this document?</h4>
    <div>
        <h5>@Model.Title</h5>
        <p>Created At: @Model.CreatedAt.ToString("g")</p>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.DocumentID) <!-- Скрытое поле для ID документа -->

    <button type="submit" class="btn btn-danger">Delete</button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
}